.ds-default.dz-message
  font-size 25px
.dz-preview
  display inline-block
  .dz-details
    position relative
    padding 0
    .dz-remove
      position absolute
      top 10px
      right 10px
      width 30px
      height 30px
      opacity 0
      background red
      text-align center
      padding 5px
      border-radius 3px
      color white
      &:hover
        opacity .9
    img
