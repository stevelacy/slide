.file
  position relative
  width 80%
  height 70%
  margin 10% 10% 0 10%
  background #fff
  overflow scroll
  overflow-x hidden
  .message
    max-height 80%
    p
      font-size 25px
      margin 20px
    .svg-add
      .line
        stroke #efefef
.shadow
  z-index 999
  position fixed
  top 0
  right 0
  left 0
  text-align center
  width 100%
  height 100%
  background rgba(1, 1, 1, .7)
  .button
    display inline-block
    margin 10px
    &.go
      display none
